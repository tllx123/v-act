{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "moduleResolution": "node",
    //"forceConsistentCasingInFileNames": true,
    "strict": true,
    //"noEmit": true,
    //"experimentalDecorators": true,
    "baseUrl": "./",
    //"allowSyntheticDefaultImports": true,
    //"noErrorTruncation": false,
    "allowJs": true,
    "paths": {
      "@v-act/api": ["./packages/v-act-api/src"],
      "@v-act/bundle": ["./packages/v-act-bundle/src"],
      "@v-act/component-cli": ["./packages/v-act-component-cli/src"],
      "@v-act/component-template": ["./packages/v-act-component-template/src"],
      "@v-act/install": ["./packages/v-act-install/src"],
      "@v-act/utils": ["./packages/v-act-utils/src"],
    },
    // Otherwise we get react-native typings which conflict with dom.lib.
    "types": ["node", "react"]
  },
  "exclude": ["**/.*/", "**/dist", "**/node_modules"]
}